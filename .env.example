# Copy to .env and fill values.
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
ASSISTANT_DB_PATH=assistant.db
# Optional user profile markdown; relative paths are resolved against project root.
USER_PROFILE_PATH=
LLM_TRACE_LOG_PATH=logs/llm_trace.log

# Plan-thought runtime knobs
# 推荐先使用以下默认值（更稳妥）
PLAN_REPLAN_MAX_STEPS=20
PLAN_REPLAN_RETRY_COUNT=2
PLAN_OBSERVATION_CHAR_LIMIT=10000
PLAN_OBSERVATION_HISTORY_LIMIT=100
PLAN_CONTINUOUS_FAILURE_LIMIT=2
TASK_CANCEL_COMMAND=取消当前任务
# 本地压测/长链路调试可选：
# PLAN_REPLAN_MAX_STEPS=100
# PLAN_REPLAN_RETRY_COUNT=3

# Tool/runtime knobs
INTERNET_SEARCH_TOP_K=3
SEARCH_PROVIDER=bocha
BOCHA_API_KEY=your_bocha_api_key_here
BOCHA_SEARCH_SUMMARY=true
SCHEDULE_MAX_WINDOW_DAYS=31
INFINITE_REPEAT_CONFLICT_PREVIEW_DAYS=31

# Timer/reminder knobs
TIMER_ENABLED=true
TIMER_POLL_INTERVAL_SECONDS=15
TIMER_LOOKAHEAD_SECONDS=30
# V1 currently forces catchup to 0 (no historical backfill), reserved for future use.
TIMER_CATCHUP_SECONDS=0
TIMER_BATCH_LIMIT=200
REMINDER_DELIVERY_RETENTION_DAYS=30

# CLI display
CLI_PROGRESS_COLOR=gray

# Persona rewrite (optional)
# If ASSISTANT_PERSONA is empty, rewrite is skipped.
PERSONA_REWRITE_ENABLED=true
ASSISTANT_PERSONA=

# Feishu long connection (optional)
FEISHU_ENABLED=false
FEISHU_APP_ID=
FEISHU_APP_SECRET=
# Comma-separated open_id allowlist, empty means allow all single-chat users.
FEISHU_ALLOWED_OPEN_IDS=
# Retry count after first send failure (total attempts = retry_count + 1).
FEISHU_SEND_RETRY_COUNT=3
FEISHU_TEXT_CHUNK_SIZE=1500
FEISHU_DEDUP_TTL_SECONDS=600
FEISHU_LOG_PATH=logs/feishu.log
FEISHU_LOG_RETENTION_DAYS=7
# Send ack reaction before text reply.
FEISHU_ACK_REACTION_ENABLED=true
# Emoji type reference: message-reaction/emojis-introduce
FEISHU_ACK_EMOJI_TYPE=OK
# Emoji type sent when a task is completed.
FEISHU_DONE_EMOJI_TYPE=DONE

# Compatibility fallback (optional)
# OPENAI_API_KEY=
# OPENAI_BASE_URL=
# OPENAI_MODEL=
